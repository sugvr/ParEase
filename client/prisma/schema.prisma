// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  UserId Int @UserId @default(autoincrement())
  Email String @unique
  Password String
  Name String
  Role String
}

model Lot {
  LotId     Int     @LotId  @default(autoincrement())
  LotName   String  @unique
  Capacity  Int
  IsActive  Boolean @default(true)
}

model Reservation {
  ReservationId Int @ReservationId @default(autoincrement())
  User          User   @relation(fields: [UserId], references: [UserId])
  UserId        Int    @UserId
  Lot           Lot    @relation(fields: [LotId], references: [LotId])
  LotId         Int
  StartDate     DateTime
  EndDate       DateTime
  Comment       String?
}

model HourlyPricePerLot {
  PriceId Int @PriceId @default(autoincrement())
  NumberOfHour Int
  PricePerHour Float?
}